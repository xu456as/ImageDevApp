/* pages/pic/pic.wxss */
.background {
  min-height: 100vh;
  width: 100%;
  background-image: linear-gradient(to bottom, #e87382, #e873839f, #e8738288);
}

.pic {
  width: 350rpx;
  height: 350rpx;
  margin: 20rpx 0 0 20rpx;
}

.small_pic {
  width: 165rpx;
  height: 165rpx;
  margin: 20rpx 0 0 20rpx;
}

.but {

  position: fixed;
  bottom: 88rpx;
  left: 0;
  right: 0;
  background: rgb(90, 158, 214);
  color: #Fff;
  border: none;
}

.head_img {
  height: 200rpx;
  width: calc(100% - 25rpx);
  text-align: center;
  display: block;
  margin: 0 auto;
}

/* 朦层 */
mask {
  width: 100%;
  height: 100vh;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(51, 51, 51, 0.432);
  box-shadow: 0 -1px 5px 3px #f3f3f3;
}

.submask {
  width: 100%;
  background-color: #fff;
  padding: 35rpx 0;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}

.mask_btn {

  padding: 20rpx 80rpx;
  border-radius: 100rpx;
}

.mask_btn1 {
  background-color: #e0e0e055;
  color: #33333377;
}

.mask_btn2 {
  background-color: rgb(90, 158, 214);
  color: #fff;
}

.mask_headimg {
  width: 100rpx;
  border-radius: 100%;
  height: 100rpx;
}
